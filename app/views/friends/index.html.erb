<p style="color: green"><%= notice %></p>

<h1>Friends</h1>
<table>
<thead>
<tr>
    <th>F name </th>
    <th>L name </th>
    <th>Email </th>
    <th>Phone </th>
    <th>Twitter </th>
    <th colspan="3"> </th>
    </tr>
    </thead>
<tbody>
<div id="friends">
  <% @friends.each do |friend| %>
  <tr>
      <td><%= friend.f_name %></td>
  <td><%= friend.l_name %></td>
  <td><%= friend.email %></td>
  <td><%= friend.phone %></td>
  <td><%= friend.twitter %></td>
  <td><%= link_to "Show", friend %></td>
  <td><%= link_to "Edit",  edit_friend_path(friend)  %></td>
  <td><%= button_to "Delete", friend , method: :delete%></td>

  </tr>
  
  <% end %>
</div>
</table>
<%= link_to "New friend", new_friend_path %>
